<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CountingWhiz.Resources.Strings"
             x:Class="CountingWhiz.SettingsPage"
             Title="{x:Static local:AppResources.Settings}">

    <VerticalStackLayout Padding="30" Spacing="25">
        <Label 
            Text="{x:Static local:AppResources.Settings}" 
            HeightRequest="48"
            Style="{StaticResource Headline}" />

        <Label 
            Text="Set Maximum Score:"
            HeightRequest="48"/>

        <Entry 
            x:Name="MaxScoreEntry" 
            Placeholder="Enter max score" 
            HeightRequest="48"
            Keyboard="Numeric" />

        <Label 
            HeightRequest="48"
            Text="Language:" />
        <Picker 
            HeightRequest="48"
            x:Name="LanguagePicker">
            <Picker.Items>
                <x:String>en</x:String>
                <x:String>de</x:String>
                <x:String>ru</x:String>
            </Picker.Items>
        </Picker>

        <Button 
            HeightRequest="48"
            Text="{x:Static local:AppResources.OK}" 
            Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</ContentPage>